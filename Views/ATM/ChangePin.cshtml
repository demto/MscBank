@model MScBank.ViewModels.ATMLoggedInViewModel
@using System
@{
    ViewBag.Title = "ChangePin";
}

<h2 class="text-success">Change Pin</h2>
<br />
<div class="col-md-2 bordered-box">
    @using (Html.BeginForm("Balance", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Check Balance
        </button>
    }

    <br /><br /><br /><br />

    @using (Html.BeginForm("WithdrawForm", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Withdraw
        </button>
    }

    <br /><br /><br /><br />

    @using (Html.BeginForm("DepositForm", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Deposit
        </button>
    }


</div>
<div class="col-md-8">

    <div id="withdrawForm" class="form-group">
        @using (Html.BeginForm("ProcessChangePIn", "ATM")) {
            <p>Please enter your current PIN</p>
            @Html.LabelFor(m => m.BankCard.OldNum)
            @Html.TextBoxFor(m => m.BankCard.OldNum, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.BankCard.OldNum)

            <p>Please enter the new PIN</p>
            @Html.LabelFor(m => m.BankCard.PinNumber)
            @Html.TextBoxFor(m => m.BankCard.PinNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.BankCard.PinNumber)

            @Html.HiddenFor(m => m.BankCard.Id)
            <button type="submit" class="btn btn-md">Deposit</button>
        }
    </div>

</div>
<div class="col-md-2 bordered-box">
    @using (Html.BeginForm("ChangePin", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Change PIN
        </button>
    }

    <br /><br /><br /><br />
    <br />
    <br /><br /><br /><br />
    @using (Html.BeginForm("Exit", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Exit
        </button>    }

</div>
@model MScBank.ViewModels.ATMLoggedInViewModel
@using System
@{
    ViewBag.Title = "Balance";
}

<h2 class="text-success">Your Balance is : </h2>
<br />
<div class="col-md-2 bordered-box">
    @using (Html.BeginForm("Balance", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Check Balance
        </button>
    }

    <br /><br /><br /><br />

    @using (Html.BeginForm("WithdrawForm", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Withdraw
        </button>
    }

    <br /><br /><br /><br />

    @using (Html.BeginForm("DepositForm", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Deposit
        </button>
    }


</div>
<div class="col-md-8">

    <h1>Your account balanace is : @string.Format("{0:C}", Model.Account.Balance)</h1>

</div>
<div class="col-md-2 bordered-box">
    @using (Html.BeginForm("ChangePin", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Change PIN
        </button>
    }

    <br /><br /><br /><br />
    <br />
    <br /><br /><br /><br />
    @using (Html.BeginForm("Exit", "ATM")) {
        @Html.HiddenFor(m => m.BankCard.Id)
        <button type="submit"
                class="btn btn-primary"
                style="height : 20%; width : 85%">
            Exit
        </button>    }

</div>
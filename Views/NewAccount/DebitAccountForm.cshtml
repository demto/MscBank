@model MScBank.Models.CurrentAccount
@{
    ViewBag.Title = "DebitAccountForm";
}

<h2>Open new Account</h2>

<p>Please enter an opening balance: </p>
@using (Html.BeginForm("CreateCurrentAccount", "NewAccount")) {

    <div class="form-group">
        @Html.LabelFor(m => m.Balance)
        @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })
    </div>
    <button class="btn btn-primary" type="submit">Open</button>
}


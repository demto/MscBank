
@{
    ViewBag.Title = "NewAccountIndex";
}

<h1>Apply for a new account</h1>
<div class="col-md-6">
    <div class="bordered-box">
        <h2>Accounts for day to day use and Savings</h2>
        <p>@Html.ActionLink("Current Account", "DebitAccountForm", "NewAccount", null, new { @class = "btn btn-primary btn-lg addMargin" })</p>
        <p>@Html.ActionLink("Savings Account", "Index", "NewAccount", null, new { @class = "btn btn-primary btn-lg addMargin" })</p>
    </div>    
</div>
<div class="col-md-6">
    <div class="bordered-box">
        <p>@Html.ActionLink("Credit Card", "Index", "NewAccount", null, new { @class = "btn btn-primary btn-lg addMargin" })</p>
        <p>@Html.ActionLink("Loan", "Index", "NewAccount", null, new { @class = "btn btn-primary btn-lg addMargin" })</p>
        <p>@Html.ActionLink("Mortgage", "Index", "NewAccount", null, new { @class = "btn btn-primary btn-lg addMargin" })</p>
